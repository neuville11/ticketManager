<div class="container">
  <%= form_with(model: ticket, local: true) do |form| %>
    <% if ticket.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

        <ul>
        <% ticket.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%- if request_action == 'new' %>
      <div class="field col-md-4">
        <%= form.label :event_id %>
        <%= form.collection_select :event_id, Event.all, :id, :name, {}, class: 'form-control' %>
      </div>

      <div class="field col-md-12">
        <%= form.label :code %>
        <%= form.text_field :code, id: :ticket_code, class: 'form-control' %>
      </div>

      <div class="field col-md-12">
        <%= form.label :ticket_url %>
        <%= form.text_field :ticket_url, id: :ticket_ticket_url, class: 'form-control' %>
      </div>
    <% end %>

    <div class="field col-md-2">
      <%= form.label :seat_number %>
      <%= form.text_field :seat_number, id: :ticket_seat_number, class: 'form-control' %>
    </div>
    <div class="field col-md-12">
      <%= form.label :status %>
      <%= form.select :status, Ticket::STATUS, {}, class: 'form-control' %>
    </div>

    <div class="field col-md-12">
      <%= form.submit 'Submit', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>