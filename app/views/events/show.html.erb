<p id="notice"><%= notice %></p>
<div class="container">
  <p>
    <strong>Name:</strong>
    <%= @event.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @event.description %>
  </p>

  <p>
    <strong>Place:</strong>
    <%= @event.place %>
  </p>

  <p>
    <strong>Event datetime:</strong>
    <%= datetime_format(@event.event_datetime) %>
  </p>

  <p>
    <strong>Capacity:</strong>
    <%= @event.capacity %>
  </p>

  <p>
    <strong>Seats taken:</strong>
    <%= @event.seats_taken %>
  </p>

  <p>
    <strong>Available:</strong>
    <%= @event.available %>
  </p>

  <%= link_to 'Edit', edit_event_path(@event) %> |
  <%= link_to 'Back', events_path %>

  <p>
    <strong>QR codes:</strong>
  </p>

  <% if @tickets %>
    <% @tickets.each do |ticket| %>
      <div class="qr-code">
        <%= ticket.qr_code&.html_safe || 'Genetating QR code' %>
        <p><%= ticket.code %></p>
      </div>
    <% end %>
  <% else %>
    <p>Tickets are being generated, wait a momment and refresh this page</p>
  <% end %>
</div>
